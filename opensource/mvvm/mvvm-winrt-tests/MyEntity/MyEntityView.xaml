<UserControl
    x:Class="mvvm.tests.MyEntityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mvvm.tests"
    >
    <UserControl.Resources>
        <x:Int32 x:Key="Int43">43</x:Int32>
        <local:StringToInt32ValueConverter x:Key="StringToInt32ValueConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            x:Name="TextBlock"
            Grid.Row="0" Grid.Column="0"
            Margin="10" Width="90"
            Text="{x:Bind ViewModel.MyProperty,Mode=OneWay}"
            />
        <Button
            Grid.Row="0" Grid.Column="1"
            Margin="10" Width="90"
            Command="{x:Bind ViewModel.IncrementCommand,Mode=OneWay}"
            Content="Increment" />
        <Button
            Grid.Row="0" Grid.Column="2"
            Margin="10" Width="90"
            Command="{x:Bind ViewModel.DecrementCommand,Mode=OneWay}"
            Content="Decrement"
            />

        <CheckBox
            Grid.Row="1" Grid.ColumnSpan="3"
            Margin="10"
            Content="Increment is available"
            IsChecked="{x:Bind ViewModel.IsIncrementAvailable,Mode=TwoWay}"
            />

        <CheckBox
            Grid.Row="2" Grid.ColumnSpan="1"
            Margin="10"
            Content="Decrement is available"
            IsChecked="{x:Bind ViewModel.IsDecrementAvailable,Mode=TwoWay}"
            />

        <Button
            Grid.Row="2" Grid.Column="1"
            Margin="10" Width="90"
            Content="String"
            Command="{x:Bind ViewModel.StringCommand}"
            CommandParameter="Hello, there!"
            />

        <Button
            Grid.Row="2" Grid.Column="2"
            Margin="10" Width="90"
            Content="Int32"
            Command="{x:Bind ViewModel.Int32Command}"
            CommandParameter="{x:Bind TextBlock.Text,Mode=OneWay,Converter={StaticResource StringToInt32ValueConverter}}"
            />
            <!-- Keeping these around for other references. -->
            <!--CommandParameter="{x:Bind ViewModel.MyProperty,Mode=OneWay}"-->
            <!--CommandParameter="{StaticResource Int43}"-->
            <!--CommandParameter="{x:Null}"-->
    </Grid>
</UserControl>
